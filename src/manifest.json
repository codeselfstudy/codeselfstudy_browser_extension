{
    "manifest_version": 2,
    "name": "Code Self Study",
    "author": "The Code Self Study community",
    "short_name": "codeselfstudy",
    "description": "A browser extension for Code Self Study (codeselfstudy.com)",
    "version": "0.9.0",
    "icons": {
        "128": "assets/icons/icon-128.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "activeTab",
        "alarms",
        "bookmarks",
        "cookies",
        "storage",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "*://*/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Web Extension Starter",
        "default_icon": "assets/icons/icon-48.png",
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "content_scripts": [
        {
            "js": ["counter.js"],
            "matches": ["*://*/*"]
        }
    ]
}
